// company-profile-app/backend/tsconfig.json (SETELAH DIPERBAIKI)
{
  "compilerOptions": {
   
    "outDir": "./dist",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    /* 2. Module & Environment (CommonJS) */
    "target": "ES2020", // Cukup stabil
    "module": "CommonJS", // PENTING: Kembali ke CommonJS
    "moduleResolution": "node", // PENTING: Kembali ke Node (legacy/CJS)
    
    "jsx": "react-jsx", // Dipertahankan jika Anda punya file .tsx
    
    /* 3. Strictness & Isolation */
    "strict": true, 
    "isolatedModules": true, // Dipertahankan, baik untuk build/bundle
    "esModuleInterop": true, // Tetap gunakan, ini membantu impor CJS
    
    // Fitur strictness yang baik, dipertahankan:
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedSideEffectImports": true, 
    "verbatimModuleSyntax": false, // Nonaktifkan karena tidak relevan di CJS

    /* 4. Output & Source Maps */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}