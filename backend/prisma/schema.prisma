// backend/prisma/schema.prisma

// Pastikan Anda sudah mengatur datasource PostgreSQL di .env
datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

// --- Model Admin (Untuk Login) ---
model Admin {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String   // Akan menyimpan password yang sudah di-hash
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// --- Model CompanyProfile (Data Utama) ---
model CompanyProfile {
  id          Int      @id @default(autoincrement())
  name        String   @unique // Hanya boleh ada satu baris profil
  tagline     String?
  description String
  address     String?
  phone       String?
  email       String?
  vision      String?
  mission     String[] // Array teks untuk list misi
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// --- Model Service (Untuk CRUD Layanan) ---
model Service {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  icon        String   // Nama Icon, seperti 'CodeBracketIcon'
  order       Int      @default(0) // Untuk urutan tampilan layanan
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}